<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>


     <section class="sheet-body">
        <div class="s7 flexcol">
            
                <table class="item-table">
                    <tr>
                        <th>{{localize "ED4E.jargon.rank"}}</th>
                        <th>{{localize "ED4E.jargon.weight"}} (for encumbrance measuring)</th>
                    </tr>
                    <tr>
                        <td>
                            <input type="text" class="ed4e value-input" name="data.rank" value="{{data.rank}}" data-dtype="Number"/>
                        </td>
                        <td>
                            <input type="text" class="ed4e value-input" name="data.common.weight" value="{{data.common.weight}}" data-dtype="Number" />
                        </td>
                    </tr>
                </table>
                 <div class="ed4e flex-item">
                    <h4>Effect</h4>
                    <textarea name="data.effect">{{data.effect}}</textarea>
                </div>
            
        </div>
    </section>
</form>
