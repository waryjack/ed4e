<form class="actor-sheet {{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
        <h1 class="charname"><input style="font-family: 'IM Fell Double Pica SC', serif; background:rgba(230, 206, 72, 0.5)" name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
    </header>

    {{!-- Attributes / Defenses / Initiative --}}
   
        <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/attributes-h.hbs"}}
        </div>

        <div class="ed4e flexrow" style="max-height:210px">
                    {{> "systems/ed4e/templates/actor/partials/defenses.hbs"}}
                    {{> "systems/ed4e/templates/actor/partials/init-move-karma.hbs"}}
                    {{> "systems/ed4e/templates/actor/partials/health.hbs"}}
                {{!--Initiative Partial--}}
        </div>
        {{!-- Sheet Tab Navigation --}}
        <nav class="sheet-tabs tabs" data-group="primary" style="font-family: 'IM Fell Double Pica SC', serif; text-transform:uppercase; font-weight:bold; background:rgb(230, 206, 72); border-top:1px solid black; border-bottom: 1px solid black">
            <a class="ed4e item" data-tab="main">Essentials</a>
            <a class="ed4e item" data-tab="magic">Magic</a>
            <a class="ed4e item" data-tab="matrix">Equipment</a>
            <a class="ed4e item" data-tab="legend">Legend</a>
        </nav>
        
        {{!--Body Divs--}}
        <section class="sheetbody">
            <div class="tab main" data-group="primary" data-tab="main">
                <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/talents.hbs"}}
                    {{> "systems/ed4e/templates/actor/partials/skills.hbs"}}
                </div>
                <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/weapons.hbs"}}
                </div>
            </div>
            <div class="tab magic" data-group="primary" data-tab="magic">Magic Stuff</div>
            <div class="tab gear" data-group="primary" data-tab="gear">Equipment Stuff</div>
            <div class="tab legend" data-group="primary" data-tab="legend">Legend Stuff</div>
        </section>
    
</form>

