<div class="ed4e flex-item">
    <h4 class="table-title">Custom Actions</h4>
    <table class="item-table">
        <tr>
            <th><a class="add-item" title="Add Action" data-type="pc_action">
                            <i class="fas fa-plus-square"></i>
                        </a></th>
            <th style="text-align:left">{{localize "ED4E.jargon.action"}}</th>
            <th>{{localize "ED4E.jargon.attribute"}} (Test/Eff)</th>
            <th>{{localize "ED4E.jargon.target"}}</th>
            <th>{{localize "ED4E.jargon.step"}}</th>
            <th>{{localize "ED4E.jargon.dice"}}</th>
            <th>{{localize "ED4E.jargon.dmg_effect"}}</th>
            <th>{{localize "ED4E.jargon.dmg_effect_dice"}}</th>
            <th>{{localize "ED4E.jargon.strain"}}</th>
            <th></th>
        </tr>
            {{#each pc_actions as |atk atkname|}}
            <tr class="effect-toggle" style="text-align:center">
                 <td><a title="Roll" class="item-roll weapon-image ed4e-button" data-item-id="{{atk._id}}"><i class="fas fa-dice-six"></i></td>
                <td style="text-align:left"><a class="item-name item" data-item-id="{{atk._id}}"><em>{{atk.name}}</em></a></td>
                <td>{{#if (eq atk.data.attribute "")}}--{{else}}{{localize (concat "ED4E.attributes_short." atk.data.attribute)}}{{/if}}/
                    {{#if (eq atk.data.dmg_attribute "")}}--{{else}}{{localize (concat "ED4E.attributes_short." atk.data.dmg_attribute)}}{{/if}}
                </td>
                 <td>{{atk.data.target}}</td>
                <td>{{atk.data.step}}</td>
                <td>{{atk.data.dice}}</td>
                <td>{{#if (eq atk.data.dmg_step 0)}}--
                    {{else}}
                    <a title="Roll Effect" class="step-roll ed4e-button" data-item-id="{{atk._id}}" data-step="{{atk.data.dmg_step}}" data-roll-type="{{atk.name}} Effect"><i class="fas fa-dice-six"> {{atk.data.dmg_step}}</i></td>
                    {{/if}}
                <td>{{#if (eq atk.data.dmg_step 0)}}--
                    {{else}}
                    {{atk.data.dmg_dice}}
                    {{/if}}</td>
                <td>{{atk.data.strain}}</td>
                <td><a class="item-edit item" data-item-id="{{atk._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{atk._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
                <tr class="effect-info">
                <td></td>
                <td colspan=9>{{atk.data.common.description}}</td>
            </tr>
            {{/each}}
    </table>
</div>