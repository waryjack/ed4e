<div class="ed4e flex-item">
    <table class="item-table">
        <tr>
            <th><a class="add-item" title="Add Spell" data-type="spell">
                            <i class="fas fa-plus-square"></i>
                        </a></th>
            <th style="text-align:left;">{{localize "ED4E.jargon.spell"}}</th>
            <th>{{localize "ED4E.jargon.circle"}}</th>
            <th>{{localize "ED4E.jargon.threads"}}</th>
            <th>{{localize "ED4E.jargon.weaving"}}</th>
            <th>{{localize "ED4E.jargon.casting"}}</th>
            <th>{{localize "ED4E.jargon.range"}}</th>
            <th>{{localize "ED4E.jargon.duration"}}</th>
            <th>{{localize "ED4E.jargon.effect"}}</th>
            <th></th>
        </tr>
            {{#each spells as |item itemName|}}
            <tr class="effect-toggle" style="text-align:center">
                <td></td>
                <td style="text-align:left"><a class="item-name item" data-item-id="{{item._id}}">{{item.name}}</a></td>
                <td>{{item.data.circle}}</td>
                <td>{{item.data.threads}}</td>
                <td>{{item.data.weave_prior}} / {{item.data.weave_reattune}}</td>
                <td>{{item.data.casting}}</td>
                <td>{{item.data.range}}</td>
                <td>{{item.data.durationg}}</td>
                <td>{{item.data.effect}}</td>
                <td><a class="item-edit item" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{item._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
            <tr class="effect-info">
                <td></td>
                <td colspan=9>{{item.data.description}}</td>
            </tr>
            {{/each}}
    </table>
</div>