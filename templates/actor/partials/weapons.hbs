<div class="ed4e flex-item">
    <h4 class="table-title">{{localize "ED4E.jargon.weapons"}}</h4>
    <table class="item-table">
        <tr>
            <th><a class="add-item" title="Add Weapon" data-type="weapon">
                            <i class="fas fa-plus-square"></i>
                        </a></th>
            <th style="text-align:left;">{{localize "ED4E.jargon.weapon"}}</th>
            <th>{{localize "ED4E.jargon.minstr"}}</th>
            <th>Base Dmg Step{{!--localize "ED4E.jargon.damage"}} {{localize "ED4E.jargon.step"--}}</th>
            <th>Total Dmg. {{!--localize "ED4E.jargon.step"}}/{{localize "ED4E.jargon.dice"--}}</th>
            <th>{{localize "ED4E.jargon.rangeshortlong"}}</th>
            <th></th>
        </tr>
            {{#each weapons as |weapon wepName|}}
            <tr style="text-align:center">
                <td><img class="weapon-image" src="{{weapon.img}}" height="24px" width="24px"/></td>
                <td style="text-align:left"><a class="item-name item" data-item-id="{{weapon._id}}">{{weapon.name}}</a></td>
                <td>{{weapon.data.str_min}}</td>
                <td>{{weapon.data.base_dmg}}</td>
                <td><a title="Roll Damage" class="item-roll ed4e-button" data-item-id="{{weapon._id}}"><i class="fas fa-dice-six"></i> {{weapon.data.full_dmg.step}}/{{weapon.data.full_dmg.dice}}</a></td>
                <td>{{#if (lt weapon.data.range.short 1)}}
                     -- 
                    {{else}}
                    {{weapon.data.range.short}} / {{weapon.data.range.long}}
                    {{/if}}</td>
                <td><a class="item-edit item" data-item-id="{{weapon._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{weapon._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
            {{/each}}
    </table>
</div>