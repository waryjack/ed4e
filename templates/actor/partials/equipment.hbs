<div class="ed4e flex-item">
    <table class="item-table">
        <tr>
            <th><a class="add-item" title="Add Equipment" data-type="equipment">
                            <i class="fas fa-plus-square"></i>
                        </a></th>
            <th style="text-align:left;">{{localize "ED4E.jargon.item"}}</th>
            <th>{{localize "ED4E.jargon.value"}}</th>
            <th>{{localize "ED4E.jargon.weight"}}</th>
            <th>{{localize "ED4E.jargon.availability"}}</th>
            <th></th>
        </tr>
            {{#each equipment as |item itemName|}}
            <tr class="effect-toggle" style="text-align:center">
                <td></td>
                <td style="text-align:left">{{item.name}}</td>
                <td>{{item.data.common.value}}</td>
                <td>{{item.data.common.weight}}</td>
                <td>{{item.data.common.availability}}</td>
                <td><a class="item-edit item" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{item._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
            <tr class="effect-info">
                <td></td>
                <td colspan=5>{{item.data.common.description}}</td>
            </tr>
            {{/each}}
    </table>
</div>