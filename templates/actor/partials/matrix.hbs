<div class="ed4e flex-item">
    <h4 class="table-title">{{localize "ED4E.jargon.spell_matrix_plural"}}</h4>
    <table class="item-table">
        <tr>
            <th><a class="add-item" title="Add Matrix" data-type="matrix">
                            <i class="fas fa-plus-square"></i>
                        </a></th>
            <th style="text-align:left;">{{localize "ED4E.jargon.spell_matrix"}}</th>
            <th>{{localize "ED4E.jargon.type"}}</th>
            <th>{{localize "ED4E.jargon.object"}}</th>
            <th>{{localize "ED4E.jargon.death"}}</th>
            <th>{{localize "ED4E.jargon.armor"}}</th>
            <th>{{localize "ED4E.jargon.holds_threads"}}?</th>
            <th>Max</th>
            <th>Current</th>
            <th>{{localize "ED4E.jargon.spells"}}</th>
            <th></th>
        </tr>
            {{#each matrices as |item itemName|}}
            <tr class="effect-toggle" style="text-align:center">
                <td></td>
                <td style="text-align:left"><a class="item-name item" data-item-id="{{item._id}}">{{item.name}}</a></td>
                <td>{{proper item.data.type}}</td>
                <td>{{#if (eq item.data.object "")}}--{{else}}{{item.data.object}}{{/if}}</td>
                <td>{{item.data.death}}</td>
                <td>{{item.data.mystic_armor}}</td>
                <td>{{#if item.data.holds_threads}}Yes{{else}}No{{/if}}</td>
                <td>{{item.data.max_threads}}</td>
                <td>{{item.data.current_threads}}</td>
                <td>{{item.data.linked_spells}}</td>
                <td><a class="item-edit item" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{item._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
            <tr class="effect-info">
                <td></td>
                <td colspan=9>{{item.data.common.description}}</td>
            </tr>
            {{/each}}
    </table>
</div>