<div class="ed4e flex-item">
    <h4 class="table-title">{{localize "ED4E.jargon.trait"}}s/Features</h4>
    <table class="item-table">
        <tr>
            <th><a class="add-item" title="Add Trait" data-type="trait">
                            <i class="fas fa-plus-square"></i>
                        </a></th>
            <th style="text-align:left;">{{localize "ED4E.jargon.trait"}}</th>
            <th>Attr.</th>
            <th>{{localize "ED4E.jargon.description"}}</th>
            <th>{{localize "ED4E.jargon.source"}}</th>
            <th></th>
        </tr>
            {{#each traits as |item itemName|}}
            <tr class="effect-toggle" style="text-align:center">
                <td></td>
                <td style="text-align:left"><a class="item-name item" data-item-id="{{item._id}}"><em>{{item.name}} {{#if (eq item.data.rating 0)}} {{else}}({{item.data.rating}}){{/if}}</em></a></td>
                <td>{{#if (eq item.data.attribute "none")}}--{{else}}{{proper item.data.attribute}}{{/if}}</td>
                <td style="width:50%; text-align:left; font-size:0.85em">{{item.data.common.description}} ({{proper item.data.action}} {{localize "ED4E.jargon.action"}})</td>
                <td>{{item.data.source_ref}}</td>
                <td><a class="item-edit item" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a> <a class="item-delete item" data-item-id="{{item._id}}"><i class='fas fa-trash'></i></a></td>
            </tr>
            <!--tr class="effect-info">
                <td></td>
                <td colspan=5>{{item.data.common.description}}</td>
            </tr-->
            {{/each}}
    </table>
</div>