<form class="actor-sheet {{cssClass}}" autocomplete="off">
     <header class="sheet-header">
        <div class="ed4e flexrow">
            <div class="ed4e flex-item" style="flex:1; max-width:72px">
                <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
            </div>
            <div class="ed4e flex-item" style="flex:1">
                <h1 class="charname"><input style="font-family: 'IM Fell Double Pica SC', serif; background:rgba(230, 206, 72, 0.5);" name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
            </div>
        </div>
        <div class="ed4e flexrow">
            <div class="ed4e flex-item form-group inset" style="padding:0px !important;">
                <table style="background:none; margin:0px !important;">
                    <tr>
                    <th class="table-title">Discipline(s)</th>
                    <th class="table-title">Total Circles</th>
                    <th colspan=3 class="table-title">Karma (Mod: {{data.karma.mod}})</th>
                    </tr>
                    <tr style="text-align:center">
                        <td style="font-size:1.15em; font-weight:bold;">{{discString}}</td>
                        <td style="font-size:1.15em; font-weight:bold;">{{totalCircles}}</td>
                        <td class="center"><a class="tick" data-stat-name="karma" data-direction="down"><i class="fas fa-minus-square"></i></a> <input class="ed4e value-input" type="text" name="data.karma.value" value="{{data.karma.value}}" data-dtype="Number" /> <a class="tick" data-stat-name="karma" data-direction="up"><i class="fas fa-plus-square"></i></a> /  
            <input type="text" class="ed4e value-input" name="data.karma.max" value="{{data.karma.max}}" data-dtype="Number" /></td>
            <td>
                <strong>Die</strong>
            </td>
            <td>
                        <select name="data.karma.die" id="karmadie" style="font-size:0.75em;">
                            {{#select data.karma.die}}
                            <option value="d4">D4</option>
                            <option value="d6" selected>D6</option>
                            <option value="d8">D8</option>
                            <option value="d10">D10</option>
                            <option value="d12">D12</option>
                            <option value="d20">D20</option>
                            {{/select}}
                        </select>
            </td>
                    </tr>
                    
                </table>
                <!--label class="table-title" for="data.race">Race</label>
                {{> "systems/ed4e/templates/actor/partials/race_select.hbs"}}
                <label for="data.discipline">Discipline</label>
                {{> "systems/ed4e/templates/actor/partials/discipline_select.hbs"}}
                <label for="circ">Circle</label>
                <input id="circ"type="text" class="ed4e value-input" name="data.circle" value="{{data.circle}}" data-dtype="Number"/-->
                
            </div>
    </div>
    </header>
    
    <div class="ed4e flexrow">
            <div class="ed4e flex-item">
                {{> "systems/ed4e/templates/actor/partials/health-alt.hbs"}}
            </div>
        </div>
    {{!--Outer Flex Row (holds sidebar, main info area)--}}

    <div class="ed4e flexrow" style="margin-right:12px !important;">

        {{!-- sidebar column--}}
        <div class="ed4e flexcol start" style="max-width:160px; min-width:160px; max-height:300px; border-right:2px solid black;">
             {{> "systems/ed4e/templates/actor/partials/attributes-sidebar.hbs"}}
             {{> "systems/ed4e/templates/actor/partials/defenses-sidebar.hbs"}}
               
                   
        </div> 
        
        {{!-- main info column --}}
        <div class="ed4e flexcol">

            <nav class="sheet-tabs tabs" data-group="primary" style="font-family: 'Willow', 'IM Fell Double Pica SC', serif; font-size:1.25em; text-transform:uppercase; font-weight:bold; background:rgb(230, 206, 72); border-top:1px solid black; border-bottom: 1px solid black">
            <a class="ed4e item" data-tab="abils">Abilities</a>
            <a class="ed4e item" data-tab="magic">Magic</a>
            <a class="ed4e item" data-tab="gear">Equipment</a>
            <a class="ed4e item" data-tab="legend">Legend</a>
            <a class="ed4e item" data-tab="misc">Misc</a>
            <a class="ed4e item" data-tab="inst">Instructions</a>
            </nav>
        
        
        
        {{!--Body Divs--}}
        <section class="sheetbody">
            <div class="tab abils" data-group="primary" data-tab="abils">
                <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/actions.hbs"}}
                </div>
                <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/talents.hbs"}}
                </div>
                <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/skills.hbs"}}
                </div>
            </div>
            <div class="tab magic" data-group="primary" data-tab="magic">
                
                {{> "systems/ed4e/templates/actor/partials/spells.hbs"}}
                {{> "systems/ed4e/templates/actor/partials/matrix.hbs"}}
                <div class="ed4e flexrow">{{> "systems/ed4e/templates/actor/partials/disciplines.hbs"}}
                {{> "systems/ed4e/templates/actor/partials/thread-items.hbs"}}
                </div>
            </div>
            <div class="tab gear" data-group="primary" data-tab="gear">
                {{> "systems/ed4e/templates/actor/partials/weapons.hbs"}}
                {{> "systems/ed4e/templates/actor/partials/armor.hbs"}}
                {{> "systems/ed4e/templates/actor/partials/equipment.hbs"}}
            </div>
            <div class="tab legend" data-group="primary" data-tab="legend">
                <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/portrait.hbs"}}
                    {{> "systems/ed4e/templates/actor/partials/bio.hbs"}}
                    <div class="ed4e flexcol">
                        {{> "systems/ed4e/templates/actor/partials/wealth.hbs"}}
                        {{> "systems/ed4e/templates/actor/partials/legend.hbs"}}
                    </div>
                </div>
            </div>
            <div class="tab misc" data-group="primary" data-tab="misc">
                    <div class="ed4e flexrow">
                        {{> "systems/ed4e/templates/actor/partials/misc.hbs"}}
                    {{> "systems/ed4e/templates/actor/partials/misc2.hbs"}}
                    </div>
                        <h4 class="table-title">Steps</h4>
                    <div class="ed4e flexrow" style="flex-wrap:wrap; justify-content:flex-start">
                    
                    {{> "systems/ed4e/templates/actor/partials/steplist.hbs"}}
                </div>
            </div>
            <div class="tab inst" data-group="primary" data-tab="inst">
                <div class="ed4e flexrow">
                    {{> "systems/ed4e/templates/actor/partials/instructions.hbs"}}
                </div>
            </div>
            
        </section>
        </div>

    </div>
    
</form>

