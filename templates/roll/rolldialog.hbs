<form class="s7 roll-dialog norm-color">
 <header class="roll-header">
        <h1>{{dialogName}}</h1>
    </header>

<div class="ed4e roll-dialog">
    <h3><strong>{{proper name}} Roll ({{localize "ED4E.jargon.step"}} {{step}} / {{localize "ED4E.jargon.dice"}} {{dice}})</strong></h3>
    <div class="ed4e flexcol">
        <div class="ed4e flex-item">
            <table>
                <tr>
                    <td>Step Modifier</td>
                    <td><input class="ed4e value-input-wide" type="text" id="stepmod" name="stepmod" value="0" data-dtype="Number"/></td>
                </tr>
                <tr>
                    <td>Result Modifier</td>
                    <td><input class="ed4e value-input-wide" type="text" id="rollmod" name="rollmod" value="0" data-dtype="Number" /> </td>
                </tr>
                {{#if karma}}
                <tr>
                    <td>Add Karma Die</td>
                    <td>
                        <select name="karmadie" id="karmadie">
                            {{#select karmadie}}
                            <option value=""></option>
                            <option value="1d4">1d4</option>
                            <option value="1d6">1d6</option>
                            <option value="1d8">1d8</option>
                            <option value="1d10">1d10</option>
                            <option value="1d12">1d12</option>
                            <option value="1d20">1d20</option>
                            {{/select}}
                        </select>

                    </td>
                </tr>
                {{/if}}
            </table>
        </div>
    </div>
    <p></p>
    <p></p>
</div>